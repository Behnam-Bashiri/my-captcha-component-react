{
    "compilerOptions": {
      "target": "ES6",
      "types": ["jest"],
      "module": "NodeNext",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "jsx": "react-jsx",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/__tests__/*.ts"]
  }
  